package frc.robot;

import edu.wpi.first.wpilibj.Joystick;

public class controller {
    // This creates a new joystick object. Joystick is the class that determines the input from the controller.
    Joystick controller = new Joystick(0);
    // This creates a boolean that is true if button A is pressed.
    boolean buttonA = controller.getRawButton(1);
    
    // deadzone threshold
    private static final double DEADZONE_THRESHOLD = 0.1;

    // this is the method to apply the deadzone
    private double applyDeadzone(double value) {
        if (Math.abs(value) < DEADZONE_THRESHOLD) {
            return 0;
        }
        return value;
    }
// Method to update joystick values and check for button states
    public void update() {
    // joystick values with deadzone applied
    double xValue = applyDeadzone(controller.getX());
    double yValue = applyDeadzone(controller.getY());

    if(buttonA){
        // This code will run if button A is pressed. This is an example.
        System.out.println("Button A is pressed");
    }
    // Exapmle usage of joystick values
    System.out.println("Joystick X: " + xValue + ", Y: " + yValue);
    }

}